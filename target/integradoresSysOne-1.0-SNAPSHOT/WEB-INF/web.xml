<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>AutoController</servlet-name>
        <servlet-class>controller.AutoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdicionalController</servlet-name>
        <servlet-class>controller.AdicionalController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdicionalController</servlet-name>
        <url-pattern>/adicional</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutoController</servlet-name>
        <url-pattern>/auto</url-pattern>
    </servlet-mapping>

</web-app>